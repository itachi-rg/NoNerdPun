<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.eventer.CreateEvent"
    android:orientation="vertical"
    style="@style/AppTheme">



    <TextView android:text="Event name" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventNameLabel"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventNameLabel"
        android:id="@+id/eventName" />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:minHeight="20dp"
        android:text="Continue"
        android:id="@+id/createEventContinue"
        android:layout_alignParentBottom="true"
        style="@style/ButtonColor"/>



</RelativeLayout>
